<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:gravity="center" android:shape="oval">
                    <size
                        android:height="48dp"
                        android:width="48dp"/>
                    <solid android:color="@color/note_overlay_line_color"/>
                </shape>
            </item>
            <item
                android:left="13dp"
                android:right="9dp"
                android:top="12dp"
                android:bottom="12dp"
                android:drawable="@drawable/ic_send_white_24dp"
                >
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:gravity="center" android:shape="oval">
                    <size
                        android:height="48dp"
                        android:width="48dp"/>
                    <solid android:color="@color/color_accent"/>
                </shape>
            </item>
            <item
                android:left="13dp"
                android:right="9dp"
                android:top="12dp"
                android:bottom="12dp"
                android:drawable="@drawable/ic_send_white_24dp"
                >
            </item>
        </layer-list>
    </item>
</selector>